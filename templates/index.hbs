<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <title>ACT.md Pattern Library - {{variant}}</title>

    <meta name="viewport" content="user-scalable=0, initial-scale=1.0" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-title" content="ACT.md" />

    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:400,300,700,400italic,300italic,700italic&subset=latin,latin-ext" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css" />

    <link href="actstrap-common.css" rel="stylesheet"/>

    {{#unless isMobile}}
      <link href="actstrap-desktop.css" rel="stylesheet"/>
    {{/unless}}

    <link href="css/patterns.css" rel="stylesheet"/>
    <link href="css/patterns-custom.css" rel="stylesheet"/>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
        <div class="container">
            <a href="index.html" class="navbar-brand">ACT.md Pattern Library</a>
            <div class="collapse navbar-collapse">
                <div class="navbar-nav mr-auto">
                    <a class="nav-item nav-link" href="index.html">Common</a>
                    <a class="nav-item nav-link" href="desktop.html">Desktop</a>
                    <a class="nav-item nav-link" href="mobile.html">Mobile</a>
                </div>
            </div>
        </div>
    </nav>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a href="#" class="navbar-brand">{{variant}}</a>
            <div class="collapse navbar-collapse">
                <div class="navbar-nav mr-auto">
                {{#with snippets}}
                    {{#if atoms}}<a href="#atoms" class="nav-item nav-link">Atoms</a>{{/if}}
                    {{#if molecules}}<a href="#molecules" class="nav-item nav-link">Molecules</a>{{/if}}
                    {{#if organisms}}<a href="#organisms" class="nav-item nav-link">Organisms</a>{{/if}}
                    {{#if templates}}<a href="#templates" class="nav-item nav-link">Templates</a>{{/if}}
                {{/with}}
                </div>
            </div>
        </div>
    </nav>

{{#with snippets}}
  {{#if atoms}}
      <div class="container patterns" id="atoms">
          <div class="row">
              <div class="col-md-9 offset-md-3"><h1 class="patterns-title">Atoms</h1></div>
          </div>
          {{#with atoms}}
              {{> _content }}
          {{/with}}
      </div>
  {{/if}}

  {{#if molecules}}
      <div class="container patterns" id="molecules">
          <div class="row">
              <div class="col-md-9 offset-md-3"><h1 class="patterns-title">Molecules</h1></div>
          </div>
          {{#with molecules}}
              {{> _content }}
          {{/with}}
      </div>
  {{/if}}

  {{#if organisms}}
      <div class="container patterns" id="organisms">
          <div class="row">
              <div class="col-md-9 offset-md-3"><h1 class="patterns-title">Organisms</h1></div>
          </div>
          {{#with organisms}}
              {{> _content }}
          {{/with}}
      </div>
  {{/if}}

  {{#if templates}}
      <div class="container patterns" id="templates">
          <div class="row">
              <div class="col-md-9 offset-md-3">
                  <h1 class="patterns-title">Templates</h1>
                  <ul>
                      {{#each templates.items}}
                          <li><a href="templates/{{slug}}.html">{{name}}</a></li>
                      {{/each}}
                  </ul>
              </div>
          </div>
      </div>
  {{/if}}
{{/with}}


<script src="js/popper.min.js"></script>
<script src="js/jquery.min.js"></script>
<script src="js/tether.min.js"></script>
<script src="js/bootstrap.min.js"></script>

<script>
  $(function () {
    $('[data-toggle="tooltip"]').tooltip()
  });
</script>

</body>
</html>
